<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerifyFragment">

    <TextView
        android:id="@+id/tv_otp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter 6 digit code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_otp_decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your code was sent to +66 89492 3675"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_otp_title" />

    <TextView
        android:id="@+id/tv_otp_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รหัสชุด OTP SAWc1548"
        app:layout_constraintEnd_toEndOf="@+id/tv_otp_decs"
        app:layout_constraintStart_toStartOf="@+id/tv_otp_decs"
        app:layout_constraintTop_toBottomOf="@+id/tv_otp_decs" />

    <include
        android:id="@+id/otp_verify"
        layout="@layout/fragment_otp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_otp_code" />

    <TextView
        android:id="@+id/tv_resend_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Don't receive it yet?"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_verify" />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send again"
        app:layout_constraintBottom_toBottomOf="@+id/tv_resend_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_next"
        app:layout_constraintTop_toTopOf="@+id/tv_resend_title" />

    <TextView
        android:id="@+id/tv_resend_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code 60s"
        app:layout_constraintEnd_toEndOf="@+id/tv_resend"
        app:layout_constraintStart_toStartOf="@+id/tv_resend_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_resend_title" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>