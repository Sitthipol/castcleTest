<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CastcleTestApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/CastcleActionBar</item>
        <item name="colorPrimaryVariant">@color/light_black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/light_black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/CastcleButtonTheme</item>

    </style>

    <style name="CastcleActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_black</item>
    </style>

    <style name="CastcleButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorSecondary">@color/white</item>
    </style>
</resources>
